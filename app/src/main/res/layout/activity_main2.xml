<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="caleb.login.Main2Activity">

    <Button
        android:id="@+id/calculadora"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:onClick="abrirCalculadora"
        android:text="@string/calculadora"
        app:layout_constraintEnd_toStartOf="@+id/gato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gato"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:onClick="abrirGato"
        android:text="Gato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calculadora" />

    <Button
        android:id="@+id/ahorcado"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:onClick="abrirAhorcado"
        android:text="Ahorcado"
        app:layout_constraintStart_toStartOf="@+id/calculadora"
        app:layout_constraintTop_toBottomOf="@+id/calculadora" />

    <Button
        android:id="@+id/memorama"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:onClick="abrirMemorama"
        android:text="Memorama"
        app:layout_constraintStart_toStartOf="@+id/gato"
        app:layout_constraintTop_toTopOf="@+id/ahorcado" />

    <Button
        android:id="@+id/conecta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:onClick="abrirConecta4"
        android:text="Conecta 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ahorcado" />

</android.support.constraint.ConstraintLayout>
